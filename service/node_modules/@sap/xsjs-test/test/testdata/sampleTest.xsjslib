var timers = $.require("timers");

describe("sample test suite", function() {

	beforeEach(function() {
	});

	afterEach(function() {
	});

    it("ok", function() {
		expect(0).toBe(0);
	});

	it("not ok", function() {
		expect("spec name").toContain("not ok");
	});

	it("only spec", function() {
	    expect("spec name").toContain("only spec");
	});

	it("SetTimeout test", function(done) {
		timers.setTimeout(function() {
			console.log("asynchronous output from single test");
			done();
		},2);
	});

    for(var i = 0; i < 100; i++) {
        it("random test result " + i, function() {
			var randValue = Math.round(Math.random());
			expect(randValue).toBe(0);

			timers.setTimeout(function() {
				console.log("asynchronous output from multi test");
			},2);
		});
    }
});