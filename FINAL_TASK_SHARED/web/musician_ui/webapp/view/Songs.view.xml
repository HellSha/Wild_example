<mvc:View controllerName="musician_ui.controller.Songs" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
    <Shell>
        <App>
            <pages>
                <Page title="{i18n>DetailTitle}" showNavButton="true" navButtonPress="handleNavButtonPress">
                    <Table id="details" mode="SingleSelectMaster" items="{path: 'songs>/song'}" selectionChange=".onSelectionChange">
                                <columns class="tableColumns">
                                    <Column id="songIdColumn">
                                        <Text text="{i18n>songId}" />
                                    </Column>
                                    <Column id="songNameColumn">
                                        <Text text="{i18n>songName}" />
                                    </Column>
                                    <Column id="songAlbumColumn">
                                        <Text text="{i18n>songAlbum}" />
                                    </Column>         
                                    <Column id="userEditColumn">
                                        <Text text="{i18n>title_edit}" />
                                    </Column>
                                
                                </columns>
                                <items>
                                    <ColumnListItem type="Active">
                                        <cells>
                                            <Input id="labelName" text="{path: 'songs>sid', formatter: '.statusEdit'}"/>
                                        </cells>
                                        <cells>
                                            <Input id="labelAge" value="{songs>name}" />
                                        </cells>
                                        <cells>
                                            <Input id="labelDescr" value="{songs>album}" />
                                        </cells>
                                        <cells>
                                            <Button id="del" icon="sap-icon://edit" text="{i18n>button_edit}" enabled="{path: '/',formatter: '.statusEdit'}" type="" press="handleDeletePress"></Button>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                       </Table>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>