<mvc:View controllerName="musician_ui.controller.App" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc">
    <Shell>
        <App>
            <pages>
                <Page>
                    <Panel id="MusicianDetailPanel" headerText="{i18n>headerPanel}" class="sapUiResponsiveMargin" width="auto">
                        <content>
                            <Table id="details" items="{path: 'musicians>/music'}" itemPress="onItemPress">
                                <headerToolbar>
                                    <Toolbar>
                                        <Button type="Accept" icon="sap-icon://write-new" text="Create Musician" press="openCreateDialog" />
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column id="userNameColumn">
                                        <Text text="{i18n>musName}" />
                                    </Column>
                                    <Column id="userAgeColumn">
                                        <Text text="{i18n>musAge}" />
                                    </Column>
                                    <Column id="userDescrColumn" width="30%">
                                        <Text text="{i18n>musDescr}" />
                                    </Column>
                                    <Column id="userCreateTColumn">
                                        <Text text="{i18n>musCreaeteT}" />
                                    </Column>
                                    <Column id="userUpdateTColumn">
                                        <Text text="{i18n>musUpdateT}" />
                                    </Column>
                                    <Column id="userEditColumn">
                                        <Text text="{i18n>title_edit}" />
                                    </Column>
                                    <Column id="userDeleteColumn">
                                        <Text text="{i18n>title_delete}" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Label text="{musicians>name}" />
                                        </cells>
                                        <cells>
                                            <Label text="{musicians>age}" />
                                        </cells>
                                        <cells>
                                            <Label text="{musicians>description}" />
                                        </cells>
                                        <cells>
                                            <Label text="{musicians>create_time}" />
                                        </cells>
                                        <cells>
                                            <Label text="{musicians>update_time}" />
                                        </cells>
                                        <cells>
                                            <Button icon="sap-icon://edit" text="{i18n>button_edit}" type="Default"></Button>
                                        </cells>
                                        <cells>
                                            <Button icon="sap-icon://delete" text="{i18n>button_delete}" type="Reject"></Button>
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </content>
                    </Panel>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
