function StringFormatter() {

	function ensureInputIsValid(s, replacements) {
		if (typeof s !== "string") {
			throw new Error("expected first argument to be of type 'string', but was " + typeof s);
		}
		if (replacements.constructor.name !== "Array") {
			throw new Error("expected second argument to be of type 'Array', but was " + replacements.constructor.name);
		}
	}
	
	this.format = function(s, replacements) {
		ensureInputIsValid(s, replacements);

		var i;
		for (i = 0; i < replacements.length; i++) {
			s = s.replace(new RegExp("\\{" + i + "\\}", "g"), replacements[i]);
		}
		return s;
	};

}
